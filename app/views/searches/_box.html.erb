<h4>Search <%= search_type %> </h4>
<% form_tag searches_path, :method => :get, :id => "frmSearch" do %>
  <fieldset title="Search">
    <%= text_field_tag :q, h(params[:q]), :id => "txtSearch", :class => "txt",
                                          :maxlength => 50 %>
    <%= submit_tag "Search", :name => nil, :id => "btnSearch",
                             :class => "button"  %>
    <%= hidden_field_tag "model", search_model %>
  </fieldset>
<% end %>

