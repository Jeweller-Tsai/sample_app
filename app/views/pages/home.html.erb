<% if signed_in? %>
    <table class="front" summary="For signed_in users">
      <tr>
        <td class="main">
          <h1 class="micropost">What's up?</h1>
          <%= render 'shared/micropost_form' %>
          <%= render 'shared/feed' %>
        </td>
        <td class="sidebar round">
          <%= render 'searches/box' %>
          <%= render 'shared/user_info' %>
          <%= render 'shared/stats' %>
        </td>
      </tr>
    </table>
<% else %>
<h1>Sample App</h1>
<p>This is the home page for
  <a href="http://www.google.com/">Sample App</a>
</p>
 <%= link_to "Sign up now!", signup_path , :class=>"signup_button round" %>
<% end %>

